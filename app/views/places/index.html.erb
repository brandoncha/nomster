<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
  <!-- Indicators -->
  <ol class="carousel-indicators">
    <li data-target="#carousel-example-generic" data-slide-to="0" class="active"></li>
    <li data-target="#carousel-example-generic" data-slide-to="1"></li>
    <!-- <li data-target="#carousel-example-generic" data-slide-to="2"></li> -->
  </ol>

  <!-- Wrapper for slides -->
  <div class="carousel-inner">
    <div class="item active">
      <%= image_tag 'slider1.jpg' %>
      <div class="carousel-caption">
        Find the best vacation places
      </div>
    </div>
    <div class="item">
      <%= image_tag 'slider2.jpg' %>
      <div class="carousel-caption">
        Have you seen Aurora before?
      </div>
    </div>
  </div>

  <!-- Controls -->
  <a class="left carousel-control" href="#carousel-example-generic" data-slide="prev">
    <span class="glyphicon glyphicon-chevron-left"></span>
  </a>
  <a class="right carousel-control" href="#carousel-example-generic" data-slide="next">
    <span class="glyphicon glyphicon-chevron-right"></span>
  </a>
</div>

<% @places.each do |place| %>
	<div class="booyah-box col-xs-10 col-xs-offset-1">
		<h1><%= link_to place.name, place_path(place) %></h1><br />
		<i><%= place.address %></i><br /><br />
		<p><%= place.description %></p><br />

		<% if place.user.present? %>
			<small><%= place.user.email %></small>
		<% end %>
		<% if place.comments.present? %>
	<div class="col-xs-12">
		<blockquote>
			<% if place.last_comment.humanized_rating.present? %>
				<b><%= place.last_comment.humanized_rating %></b> -
				<% end %>
				<%= place.last_comment.message %>
				<small><%= place.last_comment.user.email %></small>
			</blockquote>
		</div>
	<% end %>
	<div class="clear"></div>
	<% if place.photos.present? %>
		
		<%=image_tag place.photos.last.picture %>
		<blockquote>
			<%= place.photos.last.caption %>
		</blockquote>	
	
	<% end %>
</div>
<% end %>

<br class="clear"/>
<div class="pagination text-center col-xs-12 col-xs-offset-1">
	<%= paginate @places %>
</div>


<br class="clear"/>




